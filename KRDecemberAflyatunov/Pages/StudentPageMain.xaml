<Page x:Class="KRDecemberAflyatunov.Pages.StudentPageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KRDecemberAflyatunov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentPageMain">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Frame Grid.Column="1" x:Name="EnterFrame"
               NavigationUIVisibility="Hidden" Grid.ColumnSpan="2"/>
        <StackPanel Background="LightBlue" Margin="5" HorizontalAlignment="Left">
            <Button Content="Профиль" Margin="5" Width="200" x:Name="BtnProfile" Click="BtnProfile_Click"/>
            <Button Content="Учебный план" Margin="5" Width="200" x:Name="BtnStudy" Click="BtnStudy_Click"/>
            <Button Content="Успеваемость" Margin="5" Width="200" x:Name="BtnUspev" Click="BtnUspev_Click"/>
        </StackPanel>
    </Grid>
</Page>
