<Page x:Class="KRDecemberAflyatunov.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KRDecemberAflyatunov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
            <TextBlock Margin="5" Text="Авторизация" FontSize="30"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="5" FontSize="15" Text="Логин:"/>
            <TextBox x:Name="TBLogin" Margin="5" Width="200"/>
            <TextBlock Margin="5" FontSize="15" Text="Пароль:"/>
            <PasswordBox x:Name="PBPassword" Margin="5" Width="200"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="BtnEnter" Content="Вход" Margin="5" Width="100" Height="20" Click="BtnEnter_Click"/>
        </StackPanel>
    </Grid>
</Page>
