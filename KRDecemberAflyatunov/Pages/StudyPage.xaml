<Page x:Class="KRDecemberAflyatunov.Pages.StudyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KRDecemberAflyatunov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudyPage">

    <Grid>
        <DataGrid x:Name="DGStudy" AutoGenerateColumns="False" Grid.RowSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Subjects.Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Код" Binding="{Binding Subjects.Code}"></DataGridTextColumn>
                <DataGridTextColumn Header="Часы" Binding="{Binding Subjects.TotalHours}"></DataGridTextColumn>
                <DataGridTextColumn Header="Фио Преподавателя" Binding="{Binding Teachers.Name}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
