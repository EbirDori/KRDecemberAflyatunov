<Page x:Class="KRDecemberAflyatunov.Pages.TeacherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KRDecemberAflyatunov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeacherPage">

    <Grid>
        <DataGrid x:Name="DGTeacher" AutoGenerateColumns="False" Grid.RowSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}"></DataGridTextColumn>
                <DataGridTextColumn Header="Ученая степень" Binding="{Binding AcademicDegree}"></DataGridTextColumn>
                <DataGridTextColumn Header="Должность" Binding="{Binding Position}"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата приема на работу" Binding="{Binding HireDate}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button x:Name="btnEdit" Width="170" Content="Редактировать" Height="33" VerticalAlignment="Bottom" BorderBrush="White"></Button>
        </StackPanel>
    </Grid>
</Page>
